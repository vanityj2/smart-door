
.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-right: 20rpx;
}

.signature {
  font-size: 24rpx;
  color: #666666;
  margin-top: 12rpx;
}

.lunbotu {
 
  border-radius: 20px;
  margin-top: 30rpx ;
  width: 100%;
}

.lunbotu .swiper .swiper-item {
  border-radius: 20px;  
}

.help-container{
  margin-top: 20px;     
  margin-bottom: 20px; 
  margin-left: 20px;   
  margin-right: 20px;   
  padding: 25rpx;
  border-radius: 30rpx;
  box-shadow: #d6d6d6 0 0 10rpx;
  display: flex;
  justify-content: space-between;
}

.help-container .feedback-help{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.help-container .feedback-help .xiaoxi{
  height: 40rpx;
  width: 40rpx;
  justify-content: center;
  margin-right: 20rpx;
}

.help-container .help{
  font-size: 30rpx
}

.anniu {
  position: fixed;
  bottom: 50px; 
  left: 50%; 
  transform: translateX(-50%); 
  z-index: 999; 
}

.anniu button {
  color: #f5f5f5;
  border-radius: 20rpx;
  background-image: linear-gradient(to right, #3d7ef9, #FFFFFF);
}
